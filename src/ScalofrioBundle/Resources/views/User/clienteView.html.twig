{% extends 'base.html.twig' %}
{% block body %}
    {{ include('menu.html.twig') }}
    {{ parent() }}

    <div class = "container well">
        <div class="col-md-9">
            <h2>{{ cliente.nombre }}</h2>
            <br>
            <dl>
                <dt>Email</dt>
                <dd>
                    {{ cliente.email }}
                </dd>
                <br>

                <dt>Establecimientos</dt>
                <dd>

                    {% for i in establecimientos|keys %}
                    {{ establecimientos[i].nombre }}
                        <a href="{{ path('scalofrio_establecimientos_edit', { id: establecimientos[i].id}) }}">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                        <br>
                    {% endfor %}

                </dd>
                <br>

                <dt>Bares</dt>
                <dd>

                    {% for i in subestablecimientos|keys %}
                        {{ subestablecimientos[i].nombre }}
                        <a href="{{ path('scalofrio_subestablecimientos_edit', { id: subestablecimientos[i].id}) }}">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                        <br>
                    {% endfor %}

                </dd>
            </dl>
        </div>
    </div>


{% endblock %}
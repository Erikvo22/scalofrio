{% extends 'base.html.twig' %}

{% block body %}
    {{ include('menu.html.twig') }}
    {{ parent() }}
    {#Mensaje de confirmaci贸n de operaci贸n#}
    {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <div class="alert alert-success" role="alert">
            <div class="container">{{ flashMessage }}</div>
        </div>
    {% endfor %}

    <div class="container">
        <div class="col-md-6">
            <div class="page-header margin-none">
                <h2><b>Listado de gestiones</b></h2>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Acciones</th>
                    </tr>
                    {% for gestion in pagination %}
                        <tr>
                            <td>{{ gestion.id }}</td>
                            <td>{{ gestion.nombre }}</td>
                            <td class="actions">
                                <a href="{{ path('scalofrio_gestion_edit', { id: gestion.id}) }}"
                                   class="btn btn-sm btn-danger">Editar</a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
                {#display navigation#}
                <div class="navigation" style="text-align: center">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="page-header">
                <h2><b><span class="glyphicon glyphicon-wrench"></span> Nuevo tipo de gesti贸n</b></h2>
            </div>
            {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.nombre) }}
                {{ form_widget(form.nombre, { 'attr' : {'class' : 'form-control'}}) }}
                <span class="text-danger">{{ form_errors(form.nombre) }}</span>
            </div>

            <p>
                {{ form_widget(form.guardar, {'label' : 'Crear gesti贸n', 'attr': {'class': 'btn btn-success'}}) }}
            </p>

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
